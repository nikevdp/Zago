# Copia este archivo a .env.local y completa los valores.
# Los valores se exponen al cliente a través de la convención VITE_.

# Información general de la empresa
VITE_COMPANY_NAME="Mi Empresa"
VITE_COMPANY_TAGLINE="Tu socio de confianza en soluciones profesionales"

# Datos de contacto
VITE_COMPANY_EMAIL="contacto@miempresa.com"
# Usa el formato internacional con prefijo del país (sin espacios ni guiones).
VITE_COMPANY_PHONE="1234567890"

# Configuración de WhatsApp
# Número usado en el botón de contacto de WhatsApp (formato internacional sin +).
VITE_WHATSAPP_PHONE="1234567890"
# Mensaje que se precompleta cuando un usuario inicia el chat de WhatsApp.
VITE_WHATSAPP_MESSAGE="Hola, me gustaría obtener más información"

# Dirección de la empresa (dos líneas para mayor flexibilidad)
VITE_COMPANY_ADDRESS_LINE1="Calle Principal 123"
VITE_COMPANY_ADDRESS_LINE2="Ciudad, Estado 12345"

# URL del mapa incrustado de Google Maps (iframe embed URL)
VITE_GOOGLE_MAPS_EMBED_URL="https://www.google.com/maps/embed?pb=..."
